<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_input">

    <ImageView
        android:id="@+id/imageViewItemDecline"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewItemAccept"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic__delete" />

    <ImageView
        android:id="@+id/imageViewItemAccept"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic__add" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageViewItemAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="70dp"
        app:riv_mutate_background="true" />

    <TextView
        android:id="@+id/textViewItemNameFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Анна Лебедева"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/roundedImageViewItemAvatar"
        app:layout_constraintTop_toTopOf="@+id/roundedImageViewItemAvatar" />

    <TextView
        android:id="@+id/textViewItemFriendNickname"
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@lebedeva01"
        android:textColor="@color/orange_main"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/textViewItemNameFriend"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemNameFriend" />


</androidx.constraintlayout.widget.ConstraintLayout>