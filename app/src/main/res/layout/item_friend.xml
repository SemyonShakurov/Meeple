<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageViewAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="70dp"
        app:riv_mutate_background="true" />

    <TextView
        android:id="@+id/textViewNameFriend"
        style="@style/SecondHeaderTExtStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/roundedImageViewAvatar"
        app:layout_constraintTop_toTopOf="@+id/roundedImageViewAvatar" />

    <TextView
        android:id="@+id/textViewFriendNickname"
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="@color/orange_main"
        app:layout_constraintStart_toStartOf="@+id/textViewNameFriend"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameFriend" />

    <ImageView
        android:id="@+id/imageViewAddDeleteFriend"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic__delete" />


</androidx.constraintlayout.widget.ConstraintLayout>