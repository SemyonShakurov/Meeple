<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageViewSmallAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="70dp"
        app:riv_mutate_background="true" />

    <TextView
        android:id="@+id/textViewSmallName"
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="Максим Гребенщиков"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageViewSmallAvatar"
        app:layout_constraintStart_toEndOf="@+id/roundedImageViewSmallAvatar"
        app:layout_constraintTop_toTopOf="@+id/roundedImageViewSmallAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>